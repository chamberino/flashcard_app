extends layout

block content
  h1= title
  
  ul
    - deck_list.sort(function(a, b) {let textA = a.title.toUpperCase(); let textB = b.title.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
    each deck in deck_list
      li 
        a(href=deck.url) #{deck.title} 
        |  (#{deck.user.name})

    else
      li There are no decks.