extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group     
      label(for='email') Email:
      input#last_name.form-control(type='email' placeholder='Email' name='email' required='true' value=(undefined===user ? '' : user.email))
      label(for='password') Password:
      input#last_name.form-control(type='password' placeholder='Password' name='password' required='true' value=(undefined===user ? '' : user.password))
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg