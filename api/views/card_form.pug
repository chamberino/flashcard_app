extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='deck') Deck:
      select#deck.form-control(type='select' placeholder='Select deck' name='deck' required='true')
        - deck_list.sort(function(a, b) {let textA = a.title.toUpperCase(); let textB = b.title.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
        for deck in deck_list
          if card
            option(value=deck._id selected=(card.deck.toString()==deck._id.toString() ? 'selected' : false)) #{deck.title}
          else
            option(value=deck._id) #{deck.title}
    
    div.form-group
      label(for='question') Question:
      input#question.form-control(type='text', placeholder='What is the capital of North Dakota?' name='question' value=(undefined===question ? '' : card.question))

      label(for='hint') Hint:
      input#hint.form-control(type='text', placeholder='Otto von...' name='hint' value=(undefined===hint ? '' : card.hint))

      label(for='answer') Answer:
      input#answer.form-control(type='text', placeholder='Bismarck' name='answer' value=(undefined===answer ? '' : card.answer))


    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg